{% extends 'azobe_base_front.html.twig' %}

{% block title %}Log in!{% endblock %}


    
    {% block section %}
    <section class="block-wrapper section-bg">

        <div class="container">
                    <div class="row">
                        <div class="col-lg-5 mx-auto">
                            <div class="ts-grid-box">
                                <div class="login-page">
                                    <h6 class="log-sign-title text-center mb-20">Se connecter ou <a href="{{path('app_register')}}">Créer un compte ?</a></h6>
                                
                                    {# Se connecter avec d'autre réseau.#}
                                    {# <div class="row">
                                        <div class="col-xs-6 col-sm-6 col-md-6">
                                        <a href="#" class="btn btn-lg btn-primary btn-fb btn-block">Facebook</a>
                                        </div>
                                        <div class="col-xs-6 col-sm-6 col-md-6">
                                        <a href="#" class="btn btn-lg btn-info btn-block">Google</a>
                                        </div>
                                    </div><!-- row end --> #}
                                <div class="login-or">
                                    <hr class="hr-or">
                                    <span class="span-or">ou</span>
                                </div>

                                <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_login') }}">Logout</a>
            </div>
        {% endif %}
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        
            {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality. #}
            {# See https://symfony.com/doc/current/security/remember_me.html #}

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
    
        <p class="pull-right">
            <a href="{{path('app_forgot_password_request')}}"> Mot de passe oublié </a>
        </p>
        <br>
        <button class="btn btn-lg btn-primary" type="submit">
        Se Connecter
        </button>
    </form>
    </div>
    </div>
                        <!-- grid box end -->
    </div>
                    <!-- col end-->
    </div>
    </section>
{% endblock %}



